{% extends 'layoutAdmin.html.twig' %}

{% block title %}Tarifs  | {{ parent() }}{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('speciality') }}
{% endblock %}
{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <div class="container">
        <h1 class="text-center mt-5 mb-5">Listes des tarifs</h1>

        <a class="btn btn-primary text-light mb-3" href="{{ path('admin_prices_new') }}">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus-circle" fill="currentColor"
                 xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1
                0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 4z"/>
            </svg>
            Ajouter un tarif
        </a>

        <div class="table-responsive">
            <table class="table table-hover text-center">
                <thead class="table bg-primary text-light">
                <tr>
                    <th>Titre</th>
                    <th>Prix</th>
                    <th>Mode de paiement</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for price in prices %}
                    <tr>
                        <td>{{ price.name }}</td>
                        <td>{{ price.price }}</td>
                        <td>{{ price.description }}</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-sm btn-outline-primary rounded mr-2"
                                   href="{{ path('admin_prices_edit', {'id': price.id }) }}">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor"
                                         class="bi bi-pen" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd"
                                              d="M13.498.795l.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0
                                      1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5
                                      0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1
                                      1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1
                                      1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44
                                      3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
                                    </svg>
                                </a>
                                <span class="text-center">{{ include('admin_price/_delete.html.twig') }}</span>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Pas de tarif actuellement</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <a class="btn btn-danger" href="{{ path("admin_home") }}">
            Accueil administration
        </a>
    </div>


{% endblock %}
